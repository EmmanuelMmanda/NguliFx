; ===== STOP LOSS & TAKE PROFIT - YEN STABILITY =====
InpUseAtrStops=true
InpAtrMultiplierSL=2.0
InpAtrMultiplierTP=3.0
InpSLPoints=200
InpTPPoints=350

; ===== MARKET CONDITIONS - ASIAN SESSION FOCUS =====
InpUseTimeFilter=true
InpStartHour=0
InpEndHour=8
InpOnlyProDuringSessions=true
InpSessionRiskMult=0.7

; ===== REGIME RISK SCALING =====
InpUseRegimeRiskScaling=true
InpRiskMultCompression=0.5
