; ===== DRAWDOWN PROTECTION =====
InpUseDrawdownRiskScaling=true

; ===== NEWS FILTER - BOJ SENSITIVE =====
InpUseNewsFilter=true
InpMinsBeforeNews=60
InpMinsAfterNews=120
InpNewsCompleteHalt=true
InpNewsRiskMultiplier=0.3

; ===== DAILY TARGETS =====
InpDailyProfitTarget=1.0

; ===== EXECUTION QUALITY - YEN SPREADS =====
InpMaxSpreadPoints=15
